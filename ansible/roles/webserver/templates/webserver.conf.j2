# webserver.conf.j2 - Nginx Web Server Configuration

server {
    listen {{ server_port }};
    server_name {{ server_name }};
    
    root {{ app_root }};
    index index.html index.htm;

    # Access and Error Logs
    access_log /var/log/nginx/{{ app_name }}_access.log;
    error_log /var/log/nginx/{{ app_name }}_error.log;

    # Handle requests to the application
    location / {
        try_files $uri $uri/ =404;
    }

    # Optionally proxy requests to a backend service (if any)
    location /api/ {
        proxy_pass http://{{ app_backend }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    # If HTTPS is needed, uncomment and configure SSL
    # ssl_certificate /etc/nginx/ssl/{{ app_name }}.crt;
    # ssl_certificate_key /etc/nginx/ssl/{{ app_name }}.key;
    # listen 443 ssl;
}
